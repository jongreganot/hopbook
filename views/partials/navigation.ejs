<div class="container">
    <header class="border-bottom lh-1 py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
        <div class="col-4 pt-1">
        <a class="link-secondary" href="#">Subscribe</a>
        </div>
        <div class="col-4 text-center">
        <a class="display-6 fw-bold text-body-emphasis text-decoration-none" href="#">Hopbook</a>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
        <a class="link-secondary" href="#" aria-label="Search">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"></circle><path d="M21 21l-5.2-5.2"></path></svg>
        </a>
        <a class="btn btn-sm btn-outline-secondary" href="#">Sign up</a>
        </div>
    </div>
    </header>

    <div class="nav-scroller mb-3 border-bottom">
      <nav class="nav nav-underline justify-content-start">
          <% for (let i = 0; i < data.categories.length; i++) { %> 
            <% let category = data.categories[i]; %>
              <a class="nav-item nav-link link-body-emphasis mx-3 <%- (data.activeCategory == category) ? "active" : "" %>" id="<%= `category-${category}` %>" href="<%= `/home?category=${category}` %>"><%= category %></a>
          <% } %>
      </nav>
    </div>
</div>
    
<div class="bg-body-tertiary">
  <div class="container">
    <div class="d-flex flex-row justify-content-end py-3">
      <form action="/create" method="get">
        <button class="btn btn-primary border border-primary-subtle py-2" id="create-blog" type="submit">
          Create blog 
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"/>
          </svg>
        </button>
      </form>
    </div>
  </div>
</div>