<%- include("partials/header.ejs") %>
<%- include("partials/navigation.ejs") %>

<div class="album pb-5 pt-2 bg-body-tertiary">
    <div class="container">

      <% if (data.blogList.length > 0) { %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        <% for (let i = 0; i < data.blogList.length; i++) { %> 
          <% let blog = data.blogList[i];  %>
          <div class="col">
            <div class="card shadow-sm">
              <% if (blog.image) { %>
                <div class="thumbnail">
                  <img src="<%= blog.image %>" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="100%" height="225" loading="lazy">

                  <form action="/delete" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="text" class="collapse" id="blogId" name="blogId" value="<%= blog.id %>">
                    <input type="text" class="collapse" id="category" name="category" value="<%= blog.category %>">
                    <button type="submit" class="btn btn-secondary" fdprocessedid="7ja30l">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"></path>
                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"></path>
                      </svg>
                    </button>

                  </form>
                  
                </div>
              <% } else { %>
                <div class="thumbnail">
                  <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                  <button type="button" class="btn btn-secondary" fdprocessedid="7ja30l">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                      <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"></path>
                      <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"></path>
                    </svg>
                  </button>
                </div>
              <% } %>
              <div class="card-body">
                <p class="card-text"><b><%= blog.title %></b>. <%= blog.description %> </p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <form action="/view" method="get">
                      <input type="text" class="collapse" id="blogId" name="blogId" value="<%= blog.id %>">
                      <button type="submit" class="btn btn-sm btn-outline-secondary">View</button>
                    </form>
                    <form action="/edit" method="get">
                      <input type="text" class="collapse" id="blogId" name="blogId" value="<%= blog.id %>">
                      <button type="submit" class="btn btn-sm btn-outline-secondary">Edit</button>
                    </form>
                  </div>
                  <small class="text-body-secondary"><%- `@${blog.bloggerId}` %></small>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
      <% } else { %>
        <%- include("partials/invite.ejs") %>
      <% } %>
    </div>
  </div>

<%- include("partials/footer.ejs") %>